<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:Alexandria.Client.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Alexandria.Client.Shell"
        mc:Ignorable="d"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Title="Alexandria">

    <DockPanel Margin="12,0">

        <DockPanel x:Name="Header"
                   Margin="0 10 0 8"
                   DockPanel.Dock="Top">

            <ContentControl x:Name="SubscriptionDetails"
                            Margin="0 0 10 0"
                            DockPanel.Dock="Left" />

            <Views:MyBooks />
        </DockPanel>

        <Views:Queue DockPanel.Dock="Top" />

        <Views:Recommendations DockPanel.Dock="Top" />

    </DockPanel>

</Window>