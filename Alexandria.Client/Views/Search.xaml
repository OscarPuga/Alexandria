<UserControl x:Class="Alexandria.Client.Views.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Alexandria.Client.Controls">
    <Grid>
			
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition/>
			</Grid.RowDefinitions>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="Search:"/>
			<TextBox Text="search" Grid.Column="1"/>
			
			<Controls:BookSummaryList ItemsSource="{Binding Path=SearchResults}" HorizontalAlignment="Left" Grid.Row="1" Grid.ColumnSpan="2">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Image Source="{Binding Path=Image}" Stretch="None"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</Controls:BookSummaryList>
    </Grid>
</UserControl>
