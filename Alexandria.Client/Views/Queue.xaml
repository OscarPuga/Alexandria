<UserControl x:Class="Alexandria.Client.Views.Queue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Alexandria.Client.Controls"
             xmlns:pf="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Queue:" />
        <Controls:HorizontalItemsControl ItemsSource="{Binding Queue}"
                                         HorizontalAlignment="Left">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Path=Image}"
                               Stretch="None" />
                        <Button Content="Remove"
                                pf:Message.Attach="RemoveFromQueue($dataContext)" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </Controls:HorizontalItemsControl>
    </StackPanel>
    
</UserControl>
