<UserControl x:Class="Alexandria.Client.Views.Queue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Alexandria.Client.Controls">
	<StackPanel Orientation="Vertical">
		<TextBlock Text="Queue:"/>
		<Controls:HorizontalItemsControl ItemsSource="{Binding Queue}" HorizontalAlignment="Left" >
			<ItemsControl.ItemTemplate>
				<DataTemplate>
						<Image Source="{Binding Path=Image}" Stretch="None" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			<ItemsControl.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Remove from queue" />
				</ContextMenu>
			</ItemsControl.ContextMenu>
		</Controls:HorizontalItemsControl>
	</StackPanel>
</UserControl>
