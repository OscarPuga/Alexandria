<UserControl x:Class="Alexandria.Client.Views.Recommendations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Alexandria.Client.Controls"
             xmlns:pf="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework">

    <StackPanel Orientation="Vertical">
        <TextBlock Text="Recommendations:" />
        <c:HorizontalItemsControl ItemsSource="{Binding Recommendations}"
                                  HorizontalAlignment="Left">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Path=Image}"
                               Stretch="None" />
                        <Button Content="Add"
                                pf:Message.Attach="AddToQueue($dataContext)" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </c:HorizontalItemsControl>
    </StackPanel>

</UserControl>
