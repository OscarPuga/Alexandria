<UserControl x:Class="Alexandria.Client.Views.Recommendations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Alexandria.Client.Controls"
             xmlns:i="clr-namespace:Alexandria.Client.Infrastructure">

    <StackPanel Orientation="Vertical">
        <TextBlock Text="Recommendations:" />
        <Controls:HorizontalItemsControl ItemsSource="{Binding Recommendations}"
                                         HorizontalAlignment="Left">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Path=Image}"
                               Stretch="None" />
                        <Button i:Method.Bind="AddToQueue"
                                Content="Add" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </Controls:HorizontalItemsControl>
    </StackPanel>

</UserControl>
