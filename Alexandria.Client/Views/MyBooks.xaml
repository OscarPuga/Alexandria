<UserControl x:Class="Alexandria.Client.Views.MyBooks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Alexandria.Client.Controls">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="My books:" />
        <Controls:HorizontalItemsControl ItemsSource="{Binding MyBooks}"
                                         HorizontalAlignment="Left">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Path=Image}"
                           Stretch="None" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </Controls:HorizontalItemsControl>
    </StackPanel>
    
</UserControl>
